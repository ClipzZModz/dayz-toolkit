{
  "name": "@dayztools/app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "DayZ Tools desktop app",
  "author": "Jack Parlby",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "wait-on tcp:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "dev:app": "concurrently -k \"npm:dev\" \"npm:electron:dev\"",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "@dayztools/core": "0.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "30.0.0",
    "electron-builder": "^24.13.3",
    "vite": "^5.1.4",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.dayztools.app",
    "productName": "DayZ Tools",
    "files": [
      "dist/**",
      "electron/**"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        "nsis",
        "portable"
      ]
    }
  }
}
